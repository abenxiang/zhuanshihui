<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:minHeight="250dp"
    android:orientation="vertical"
    android:paddingBottom="8.7dp"
    android:paddingTop="11.3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="7.5dp"
        android:layout_height="157.5dp">

        <com.sina.shopguide.view.SelectableRoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_pic"
            android:layout_width="match_parent"
            android:layout_height="157.5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="6dp"
            app:sriv_left_top_corner_radius="6dp"
            app:sriv_right_bottom_corner_radius="6dp"
            app:sriv_right_top_corner_radius="6dp" />

        <ImageView
            android:id="@+id/tv_commision"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:src="@drawable/ic_quan" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="7dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minHeight="38dp"
        android:textColor="#333333"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="7dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="券后价  ¥"
            android:textColor="#FD4A41"
            android:textSize="11sp" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#FD4A41"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:textColor="#A29FA0"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>