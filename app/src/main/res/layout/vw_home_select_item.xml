<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/img_fr"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.sina.shopguide.view.SelectableRoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_hot"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="27.5dp"
            app:sriv_left_top_corner_radius="27.5dp"
            app:sriv_right_bottom_corner_radius="27.5dp"
            app:sriv_right_top_corner_radius="27.5dp"
            android:layout_gravity="center" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_fr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:textColor="#8e8e8e"
        android:gravity="center"
        android:textSize="14sp" />

</RelativeLayout>