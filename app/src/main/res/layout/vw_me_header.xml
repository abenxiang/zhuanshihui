<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorUiBackgroud"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="@drawable/bg_gradient_nologin_me">

        <com.sina.shopguide.view.CircleImageView
            android:id="@+id/id_avatar"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="41dp"
            android:src="@drawable/ic_default_avatar" />

        <ImageView
            android:id="@+id/id_sets"
            android:focusableInTouchMode="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="41dp"
            android:src="@drawable/ic_set" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/id_avatar">

            <TextView
                android:id="@+id/id_login"
                android:layout_width="90.5dp"
                android:layout_height="27.5dp"
                android:layout_marginTop="64dp"
                android:background="@drawable/bg_text_bigcorner"
                android:gravity="center"
                android:text="@string/login_or_registe"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/id_login_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/id_login_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="50dp"
                    android:text="nick"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/id_login_invate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/id_login_nick"
                    android:layout_marginTop="13dp"
                    android:text="nick"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/id_login_invat_copy"
                    android:layout_width="54dp"
                    android:layout_height="22dp"
                    android:layout_below="@id/id_login_nick"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/id_login_invate"
                    android:background="@drawable/bg_text_bigcorner"
                    android:gravity="center"
                    android:text="@string/str_copy"
                    android:textColor="@color/colorWhite"
                    android:textSize="14sp" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
