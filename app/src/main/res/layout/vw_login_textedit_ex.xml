<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/id_tag_lefticon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/id_tag_righticon"
        android:layout_width="85dp"
        android:layout_height="23dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="42dp"
        android:gravity="center"
        android:background="@drawable/bg_text_stoke_red_corner"
        android:text="@string/bindalipay_smscode_get"
        android:textColor="@color/colorRedTitle"
        android:textSize="13sp" />

    <EditText
        android:id="@+id/id_tag_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/id_tag_righticon"
        android:layout_toRightOf="@+id/id_tag_lefticon"
        android:background="@color/colorWhite"
        android:gravity="center_vertical|left"
        android:lines="1"
        android:textColor="@color/colorTopPanelText"
        android:textColorHint="@color/colorTopPanelTip"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/id_tag_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="53dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/id_tag_lefticon"
        android:background="@color/colorLine" />
</RelativeLayout>
