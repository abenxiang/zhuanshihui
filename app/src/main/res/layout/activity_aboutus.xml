<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorUiBackgroud"
    android:orientation="vertical"
    tools:ignore="ContentDescription">

    <include
        android:id="@+id/include1"
        layout="@layout/vw_comm_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/id_aboutus_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="46dp"
            android:src="@drawable/ic_launcher" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="30dp"
            android:background="@color/colorLine" />

        <com.sina.shopguide.view.TopPanelTipView
            android:id="@+id/id_curr_version"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:content="@string/aboutus_version"
            app:isHideArrow="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />

        <com.sina.shopguide.view.TopPanelTipView
            android:id="@+id/id_pinfen"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1px"
            app:content="@string/aboutus_pinfen"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />

        <com.sina.shopguide.view.TopPanelTipView
            android:id="@+id/id_feedbk"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="1px"
            app:content="@string/aboutus_feedback" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLine" />
    </LinearLayout>
</LinearLayout>